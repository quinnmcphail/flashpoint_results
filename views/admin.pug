doctype html
html(lang='en')
  head
    // Required meta tags always come first
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    title Flashpoint Race Timing Results - Admin Panel
    // Bulma CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.1.0/css/bulma.css')
    link(rel='stylesheet', href='custom.css')
  body
    .container.is-fluid
      .column
        h1 Flashpoint Results Admin
        p.control
          input.input.eventName(type='text', placeholder='Event Name')
        p.control
          input.input.eventCode(type='text', placeholder='Event Code')
        a.button(onclick='eventNameSend()') Submit
        a.button(onclick='sendDevMode()') Dev Mode
    // jQuery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js', integrity='sha384-THPy051/pYDQGanwU6poAc/hOdQxjnOEXzbT+OuUAFqNqFjL+4IGLBgCJC3ZOShY', crossorigin='anonymous')
    script.
      function eventNameSend(){
        var request = new XMLHttpRequest();
        var eventName = $('.eventName').val();
        request.open('POST','/set/currentEventName/' + eventName);
        request.send();
        $('.eventName').val('');
        eventCodeSend();
      }
      function eventCodeSend(){
        var request = new XMLHttpRequest();
        var eventCode = $('.eventCode').val();
        request.open('POST','/set/currentEventCode/' + eventCode);
        request.send();
        $('.eventCode').val('');
      }
      function sendDevMode(){
        var request = new XMLHttpRequest();
        request.open('POST','/set/devMode');
        request.send();
      }
